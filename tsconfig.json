{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": false,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "filesGlob":[
    "typings/index.d.ts",
    "src/**/*.ts",
    "node_modules/typescript/lib/lib.es2015.d.ts"
  ],
  "paths": {
    "@models/*" : [ "src/models/*" ],
    "*" : [ "node_modules/aws-sdk/*" ]
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/karma-env"
  ]
}
